<div class="container" data-controller="workout" data-workout-alarm-value="<%= asset_path("alarm.mp3")%>">

  <!-- Exercise -->
  <div data-workout-target="exercise">
    <div class="d-flex align-items-center justify-content-between">
      <%= link_to raw('<i class="fa-solid fa-arrow-left-long col-1"></i>'), plan_path(@exercise_plan.plan) %>
      <h1 class="my-auto text-center col-0"><%= @exercise_plan.exercise.title %></h1>
      <p class="fa-solid fa-arrow-left-long col-1 m-0 opacity-0"></p>
    </div>
    <div class="d-flex justify-content-between align-items-center">
      <div class="row justify-content-center mt-4 pt-1">
        <p class="border border-dark circle-small mb-2">Nil</p>
        <p class="text-center mb-0">Reps</p>
      </div>
      <div class="row justify-content-center">
        <p class="border border-dark circle-large mt-4 mb-2 text-center" data-workout-target="time"><%= @exercise_plan.duration_in_mmss %></p>
        <p class="text-center mb-0">Timer</p>
      </div>
      <div class="row justify-content-center mt-4 pt-1">
        <p class="border border-dark circle-small mb-2"><span data-workout-target="trackerCount"><%= @exercise_plan.trackers.count %></span>/<span data-workout-target="set"><%= @exercise_plan.set %></span></p>
        <p class="text-center mb-0">Sets</p>
      </div>
    </div>
    <% if @exercise_plan.current_exercise_plan?(@exercise_plan.plan) %>
      <button type="button" class="btn btn-primary col-5 my-4 mx-auto py-3 d-block">Start</button>
    <% else %>
      <button type="button" class="btn btn-primary col-5 my-4 mx-auto py-3 d-block disabled">Start</button>
    <% end %>
  </div>

  <%= render "exercise_plans/exercise_helper", exercise_plan: @exercise_plan %>
</div>
