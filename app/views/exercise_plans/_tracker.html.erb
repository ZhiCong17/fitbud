<%= simple_form_for [exercise_plan, tracker], html: { class: "d-flex align-items-center gap-2" } do |f| %>
  <%= f.input :weight, label: false, input_html: { class:"text-center", placeholder: "KG", disabled: disabled_tracker} %>
  <%= f.input :repetitions, label: false, input_html: { class: "text-center d-inline", placeholder: "Reps", disabled: disabled_tracker} %>
  <%= f.submit "+", class: "btn btn-primary mb-3", disabled: disabled_tracker, data: {action: "click->countdown#secondsUpdated"} %>
<% end %>
