<div class="d-flex align-items-center justify-content-between">
  <%= link_to raw('<i class="fa-solid fa-arrow-left-long col-1"></i>'), plan_path(exercise_plan.plan) %>
  <h1 class="mt-3 text-center col-0"><%= exercise_plan.exercise.title %></h1>
  <p class="fa-solid fa-arrow-left-long col-1 m-0 opacity-0"></p>
</div>
<p class="text-center">Recommended weight: <%= exercise_plan.weight %>kg</p>

<div class="d-flex justify-content-between g-4 align-items-center m-4 px-1">
  <div>
    <p class="border border-dark circle-small mb-2"><%= exercise_plan.repetitions %></p>
  <p class="text-center mb-0">Reps</p>
  </div>
  <div>
    <p class="border border-dark circle-large mb-2" data-workout-target="time">00:00</p>
    <p class="text-center mb-0">Rest</p>
  </div>
  <div>
    <p class="border border-dark circle-small mb-2"><span data-workout-target="trackerCount"><%= exercise_plan.trackers.count %></span>/<span data-workout-target="set"><%= exercise_plan.set %></span></p>
    <p class="text-center mb-0">Sets</p>
  </div>
</div>
