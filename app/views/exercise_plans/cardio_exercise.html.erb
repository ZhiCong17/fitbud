<div class="container" data-controller="workout" data-workout-alarm-value="<%= asset_path("alarm.mp3")%>">

  <!-- Exercise -->
  <div data-workout-target="exercise">
    <div class="d-flex align-items-center justify-content-between">
      <%= link_to raw('<i class="fa-solid fa-arrow-left-long col-1"></i>'), plan_path(@exercise_plan.plan) %>
      <h1 class="my-auto text-center col-0"><%= @exercise_plan.exercise.title %></h1>
      <p class="fa-solid fa-arrow-left-long col-1 m-0 opacity-0"></p>
    </div>
    <p class="border border-dark circle-large mt-4 mb-2 mx-auto" data-workout-target="time"><%= @exercise_plan.duration_in_mmss %></p>
    <p class="text-center mb-0">Timer</p>
    <div class="d-flex justify-content-between my-4 mx-1">
      <% if @exercise_plan.current_exercise_plan?(@exercise_plan.plan) %>
        <button type="button" class="btn btn-primary col-5 py-3">Start</button>
        <button type="button" class="btn btn-primary col-5 lh-sm py-3" data-action="click->workout#updateSet">Complete</button>
      <% else %>
        <button type="button" class="btn btn-primary col-5 py-3 disabled">Start</button>
        <button type="button" class="btn btn-primary col-5 lh-sm py-3 disabled" data-action="click->workout#updateSet">Complete</button>
      <% end %>
    </div>
  </div>

  <%= render "exercise_plans/exercise_helper", exercise_plan: @exercise_plan %>
</div>
